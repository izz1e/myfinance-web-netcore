@{
    ViewData["Title"] = "Listagem de transacões";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-block btn-primary" onclick="Novo()">Registrar transações</button>
<br/><br/>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Historico</th>
        <th>Tipo</th>
        <th>Valor</th>
        <th>Data</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @{
        foreach (var item in (List<TransacaoModel>)ViewBag.ListarTransacoes) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Historico</td>
                <td>@item.Valor</td>
                <td>@item.Data</td>
                <td>@item.Tipo</td>
                <td><button type="button" class="btn btn-block btn-outline-warning" onclick="Atualizar(@item.Id.ToString())">Atualizar</button></td>
                <td><button type="button" class="btn btn-block btn-outline-danger" onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
            </tr>
        }
    }
</table>


<script>
    function Novo() {
        window.location.href = "/Transacao/Cadastro";
    }
    function Atualizar(id){
        window.location.href = "/Transacao/Cadastro/" + id;
    }
    function Excluir(id){
        window.location.href = "/Transacao/Excluir/" + id;
    }
</script>


