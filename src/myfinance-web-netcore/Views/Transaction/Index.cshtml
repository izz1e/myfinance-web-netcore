@{
    ViewData["Title"] = "Transaction Listing";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-block btn-primary" onclick="New()">Register Transaction</button>
<br/><br/>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Detail</th>
        <th>Type</th>
        <th>Value</th>
        <th>Date</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @{
        foreach (var item in (List<TransactionModel>)ViewBag.ListTransactions) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Detail</td>
                <td>@item.Type</td>
                <td>@item.Value</td>
                <td>@item.Date</td>
                <td><button type="button" class="btn btn-block btn-outline-warning" onclick="Update(@item.Id.ToString())">Update</button></td>
                <td><button type="button" class="btn btn-block btn-outline-danger" onclick="Delete(@item.Id.ToString())">Delete</button></td>
            </tr>
        }
    }
</table>


<script>
    function New() {
        window.location.href = "/Transaction/Register";
    }
    function Update(id){
        window.location.href = "/Transaction/Register/" + id;
    }
    function Delete(id){
        window.location.href = "/Transaction/Delete/" + id;
    }
</script>


